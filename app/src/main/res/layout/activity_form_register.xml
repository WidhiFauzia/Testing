<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".FormRegisterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_title"
            android:layout_width="135dp"
            android:layout_height="31dp"
            android:background="@drawable/title"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="70dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_title"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lengkapi_data_diri"
            android:textColor="@color/colorBlueBackground"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintTop_toBottomOf="@id/iv_title"
            app:layout_constraintLeft_toLeftOf="parent"
            style="@style/TextAppearanceBold"/>

        <EditText
            android:id="@+id/et_birth"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_edittext_lightblue"
            android:hint="Tanggal Lahir"
            style="@style/EditTextAppearance"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:padding="15dp"
            android:inputType="text"
            android:drawableRight="@drawable/ic_baseline_today_24"
            app:layout_constraintTop_toBottomOf="@id/tv_title"/>

        <EditText
            android:id="@+id/et_gender"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_edittext_lightblue"
            android:hint="Jenis Kelamin"
            style="@style/EditTextAppearance"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:padding="15dp"
            android:inputType="text"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
            app:layout_constraintTop_toBottomOf="@id/et_birth"/>

        <TextView
            android:id="@+id/tv_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tempat_tinggal"
            android:textColor="@color/colorBlueBackground"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintTop_toBottomOf="@id/et_gender"
            app:layout_constraintLeft_toLeftOf="parent"
            style="@style/TextAppearance1"/>

        <EditText
            android:id="@+id/et_provinsi"
            style="@style/EditTextAppearance"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/bg_edittext_lightblue"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
            android:hint="Provinsi"
            android:inputType="text"
            android:padding="15dp"
            app:layout_constraintTop_toBottomOf="@id/tv_title2"
            tools:layout_editor_absoluteX="15dp" />

        <EditText
            android:id="@+id/et_kota"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_edittext_lightblue"
            android:hint="Provinsi"
            style="@style/EditTextAppearance"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:padding="15dp"
            android:inputType="text"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
            app:layout_constraintTop_toBottomOf="@id/et_provinsi"/>

        <EditText
            android:id="@+id/et_kecamatan"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_edittext_lightblue"
            android:hint="Kecamatan"
            style="@style/EditTextAppearance"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:padding="15dp"
            android:inputType="text"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
            app:layout_constraintTop_toBottomOf="@id/et_kota"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>